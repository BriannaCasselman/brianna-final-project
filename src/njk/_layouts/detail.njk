{% extends '_layouts/base.njk' %}

{% block content %}
<article class="container">
  <div class="row">
    <div class="col-sm-4 left-rail">
    <img class="img-fluid" src="img/members/{{ members.imagebw }}" alt="{{ members.slug }}">
    <h5>Birthdate: {{ members.birthdate }}</h5>
    <h5>Birthplace: {{ members.birthplace }}</h5>
    <h5>Tenure: {{ members.tenure }}</h5>
    <h5>{{ members.instruments }}</h5>
      {% block info %}{% endblock %}
    </div>
    <div class="col-sm-8">
      <h1>{{ members.name }} Biography</h1>
      <p>{{ members.text | safe}}</p>
      {% block story %}{% endblock %}
    </div>
  </div>
</article>
{% endblock %}
